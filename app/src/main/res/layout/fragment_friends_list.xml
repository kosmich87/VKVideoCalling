<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/friend_list"
        android:name="kz.kkurtukov.vkvideocalling.FriendListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="kz.kkurtukov.vkvideocalling.MainActivity"
        tools:listitem="@layout/view_friends_list_item" />

    <kz.kkurtukov.vkvideocalling.views.RobotoTextView
        android:id="@+id/friend_list_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/empty_text_size"
        android:text="@string/empty_list"
        android:gravity="center" />
</RelativeLayout>
